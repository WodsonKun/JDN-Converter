var test = file_text_open_write(game_save_id + "nohud.bat");
if (get_nohud != "*.mp4")
{
    output_folder = string_replace(filename_name(get_nohud), ".mp4", "");
}
if (get_nohud != "*.webm")
{
    output_folder = string_replace(filename_name(get_nohud), ".webm", "");
}
